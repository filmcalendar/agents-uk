{
  "name": "@filmcalendar/agents-uk",
  "description": "UK agents",
  "version": "0.0.0-development",
  "repository": "git@github.com:filmcalendar/agents-uk.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [],
  "bin": {
    "fc-agent": ".bin/fc-agent.cjs"
  },
  "type": "module",
  "dependencies": {
    "@filmcalendar/agents-core": "1.13.0",
    "@filmcalendar/types": "1.6.0",
    "@sindresorhus/slugify": "2.1.0",
    "@tuplo/fletch": "1.12.0",
    "@tuplo/series-with": "1.6.1",
    "@tuplo/split-names-list": "1.11.1",
    "cheerio": "1.0.0-rc.10",
    "date-fns": "2.22.1",
    "lodash.escaperegexp": "4.1.2",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.29",
    "@types/jest": "26.0.23",
    "@types/lodash.escaperegexp": "4.1.6",
    "@types/node": "15.12.4",
    "@types/node-fetch": "2.5.10",
    "@typescript-eslint/eslint-plugin": "4.28.0 ",
    "@typescript-eslint/parser": "4.28.0",
    "env-cmd": "10.1.0",
    "esbuild": "0.12.9",
    "eslint": "7.29.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "jest": "27.0.4",
    "nock": "13.1.0",
    "nyc": "15.1.0",
    "prettier": "2.3.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.4"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "ci:test": "TZ=utc jest --ci",
    "ci:test:coverage": "bash ./scripts/coverage.sh",
    "dev": "bash scripts/watch.sh",
    "docker:rm-all": "docker rm $(docker ps -a -q)",
    "docker:rmi-all": "docker rmi -f $(docker images -q)",
    "docker:run": "env-cmd -f .env.secrets fc-agents-docker-run-local",
    "lint": "eslint --ext .ts src/",
    "dev-run": "NODE_ENV=development fc-agent",
    "test": "TZ=utc jest --watch",
    "ts-check": "tsc --noEmit",
    "validate": "yarn lint; yarn ts-check; yarn ci:test"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "jest/no-hooks": "off",
      "no-underscore-dangle": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off",
          "@typescript-eslint/naming-convention": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github"
    ]
  }
}
