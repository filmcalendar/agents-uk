{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "ES2015",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
